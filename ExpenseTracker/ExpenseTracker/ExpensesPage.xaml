<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTracker.ExpensesPage"
             xmlns:Model="clr-namespace:ExpenseTracker.Model"
             >
    <ContentPage.ToolbarItems >
        <ToolbarItem Text="+" Clicked="AddNewExpenses_Click" ></ToolbarItem>
        <ToolbarItem Text="Budget Summary" Clicked="ShowMonthlyBudgetSummary_Click" ></ToolbarItem>
    </ContentPage.ToolbarItems>
    <StackLayout>

        <Button Text="Add" Clicked="AddNewExpenses_Click"/>
        <Label x:Name="Title" Text="Current Month Expenses"/>
        <ListView x:Name="ExpensesListView"
                   Margin="20"
                   ItemSelected="ExpensesListView_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="Model:Expense">
                    <TextCell Text ="{Binding ExpenseName}" Detail="{Binding ExpenseAmount}"></TextCell>
                </DataTemplate>
                
            </ListView.ItemTemplate>
            
            
        </ListView>
        <Grid>
            <Grid.RowDefinitions >
                    
            </Grid.RowDefinitions>
        </Grid>
        <Label x:Name="AmountLabel" Text="Summary"/>


    </StackLayout>
   
</ContentPage>