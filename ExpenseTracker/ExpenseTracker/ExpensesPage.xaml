<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpensesTracker.ExpensessPage"
             xmlns:Model="clr-namespace:ExpensesTracker.Model"
             >
    <ContentPage.ToolbarItems >
        <ToolbarItem Text="+" Clicked="AddNewExpensess_Click" ></ToolbarItem>
        <ToolbarItem Text="Budget Summary" Clicked="ShowMonthlyBudgetSummary_Click" ></ToolbarItem>
    </ContentPage.ToolbarItems>
    <StackLayout>

        <Button Text="Add" Clicked="AddNewExpensess_Click"/>
        <Label x:Name="Title" Text="Current Month Expensess"/>
        <ListView x:Name="ExpensessListView"
                   Margin="20"
                   ItemSelected="ExpensessListView_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="Model:Expenses">
                    <TextCell Text ="{Binding ExpensesName}" Detail="{Binding ExpensesAmount}" TextColor="Black" DetailColor="DarkBlue" ></TextCell>
                </DataTemplate>
                
            </ListView.ItemTemplate>
            
            
        </ListView>
        <Grid>
            <Grid.RowDefinitions >
                    
            </Grid.RowDefinitions>
        </Grid>
        <Label x:Name="AmountLabel" Text="Summary"/>


    </StackLayout>
   
</ContentPage>